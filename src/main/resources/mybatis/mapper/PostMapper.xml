<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.forums.domain.post.PostMapper">

    <select id="getListAll" resultType="project.forums.domain.post.Post">
        select *
        from post
        order by id
    </select>

    <select id="getListOne" resultType="project.forums.domain.post.Post">
        select *
        from post
        where board_uri = #{board_uri}
    </select>

    <insert id="setInsert"  parameterType="project.forums.domain.post.Post">
        insert into post (board_title,board_uri,board_description,
                           upload_file_name,store_file_name,member_id,board_create_date,board_update_date)
        values(#{boardTitle},#{boardUri},#{boardDescription},
               #{uploadFileName},#{storeFileName},
               #{memberId},now(),now());
    </insert>

    <update id="setUpdate" parameterType="project.forums.domain.post.Post">
        update post
        set board_title = #{boardTitle},
            board_description = #{boardDescription}
        where board_title = #{boardTitle} and id = #{id}
    </update>

    <delete id="setDelete" parameterType="project.forums.domain.post.Post">
        delete from post
        where board_title = #{boardTitle} and id = #{id} and member_id=#{member_id}
    </delete>

