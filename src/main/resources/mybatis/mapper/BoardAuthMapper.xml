<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.forums.domain.board.BoardAuthMapper">

    <insert id="setInsert" parameterType="project.forums.domain.board.BoardAuth">
        insert into board_auth(member_id,board_uri,board_role,regiDate)
        values (#{memberId},#{boardUri},#{boardRole},now())
    </insert>

    <select id="getListOne" parameterType="map" resultType="project.forums.domain.board.BoardAuth">
        select *
        from board_auth
        where board_uri = #{boardUri} and member_id = #{memberId}
    </select>

</mapper>
